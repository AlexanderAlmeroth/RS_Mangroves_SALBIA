// -------------------- EXPORT ---------------------                                -> The file size of the TIFS is too large to be exported as one, that's why we cut them in half here and export them as "Cropped_1" and "Cropped_2". Afterwards they can be merged in another software
// CONVERT THE Crop-Boxes  
//var Crop1 = Crop1.geometry(); 
//var Crop2 = Crop2.geometry(); 

//EXPORT CLASSIFIED IMAGE 
var classified_2010_Cropped_1 = classifiedPoly.clip(Crop1).clip(MaskGambia);
var classified_2010_Cropped_2 = classifiedPoly.clip(Crop2).clip(MaskGambia);

Export.image.toDrive({
    image: classified_2010_Cropped_1,
    description: 'classified_2010_Cropped_1',
    folder: 'GEE_Export',
    fileNamePrefix: 'classified_2010_Cropped_1',
    scale: 30,
    maxPixels: 1e13,
    region:Crop1,
    }); 
Export.image.toDrive({
    image: classified_2010_Cropped_2,
    description: 'classified_2010_Cropped_2',
    folder: 'GEE_Export',
    fileNamePrefix: 'classified_2010_Cropped_2',
    scale: 30,
    maxPixels: 1e13,
    region:Crop2,
    });     

//EXPORT REFINED IMAGE    
var classified_2010_1_Improved = finalClassification.clip(Crop1).clip(MaskGambia);
var classified_2010_2_Improved = finalClassification.clip(Crop2).clip(MaskGambia);

Export.image.toDrive({
    image: classified_2010_1_Improved,
    description: 'classified_2010_1_Improved',
