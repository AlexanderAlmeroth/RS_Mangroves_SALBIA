    fileNamePrefix: 'classified_2010_2_Improved',
    scale: 30,
    maxPixels: 1e13,
    region:Crop2,
    });         






    
//EXPORT COMPOSITE IMAGE
var Composite_2010_Cropped_1 = medianCompositeNDVI.clip(Crop1).clip(MaskGambia);
var Composite_2010_Cropped_2 = medianCompositeNDVI.clip(Crop2).clip(MaskGambia);

Export.image.toDrive({
    image: Composite_2010_Cropped_1.visualize(visualization),
    description: 'Composite_2010_Cropped_1',
    folder: 'GEE_Export',
